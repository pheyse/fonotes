<?xml version="1.0" encoding="UTF-8"?>
<screen title="My Screen" >
	<container orientation="row">
		<bar>
			<cell size="100">
				<label id="noteTitle" text="My Note 123" style="large"/>
			</cell>
		</bar>
		<bar>
			<cell size="100">
				<button id="editTitleButton" text="Edit title" />
				<button id="editTextButton" text="Edit text" primary="true"/>
			</cell>
		</bar>
		<bar>
			<cell size="100">
			</cell>
		</bar>

        
        <bar>
			<cell size="80">
				<textField id="myTextField" labelText="my text field" text="Hello" />
			</cell>
			<cell size="20">
				<button id="myButton" text="Click Me" primary="true"/>
			</cell>
		</bar>
    </container>
</screen>