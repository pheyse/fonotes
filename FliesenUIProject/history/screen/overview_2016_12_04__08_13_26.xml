<?xml version="1.0" encoding="UTF-8"?>
<screen title="My Screen" >
    <dto id="items" type="overviewList" /> 
	<container orientation="row">
		<bar>
			<cell size="100">
				<label id="info" text="FoNotes" style="large"/>
			</cell>
		</bar>
        <bar>
            <cell size="100">
                <table id="notesTable" dto="items.items" idDTOField="id" style="normal">
                    <column size="40" text="My Text">
                        <tableLabel textDTOField="myText" />
                    </column>
                    <column size="40" text="My Number">
                        <tableLabel textDTOField="myValue" />
                    </column>
                    <column size="20" text="Actions">
                        <tableButton id="chooseButton"  text="Choose" />
                    </column>
                </table>
            </cell>
        </bar>
    </container>
</screen>